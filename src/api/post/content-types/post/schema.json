      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "content_outline": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "semantic_keywords": {
