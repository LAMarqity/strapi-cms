{
  "collectionName": "components_content_blocks_image_blocks",
  "info": {
    "displayName": "Image Block",
    "description": "Image with caption and SEO optimization"
  },
  "options": {},
  "attributes": {
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "alt_text": {
      "type": "string",
      "required": true
    },
    "caption": {
      "type": "text"
    },
    "image_size": {
      "type": "enumeration",
      "enum": ["small", "medium", "large", "full-width"],
      "default": "medium"
    },
    "alignment": {
      "type": "enumeration",
      "enum": ["left", "center", "right"],
      "default": "center"
    },
    "lazy_loading": {
      "type": "boolean",
      "default": true
    }
  }
}
